{% extends 'base.html.twig' %}
{% block title %}Contactos{% endblock %}
{% block body %}
    <h1>Contactos</h1>
    <h2>Bienvenido a la web de contactos.</h2>
    <p>Lista de contactos</p>

	<a href="{{ path('nuevo') }}" style="display:inline-block; margin-bottom:15px;">
        <button style="padding:8px 15px; border-radius:5px; background:#d63384; color:white; border:none;">Crear contacto</button>
    </a>

    <table style="width:100%; border-collapse:collapse; max-width:600px; margin:20px auto;">
        <thead>
            <tr style="background:#ffe6f0;">
                <th style="padding:10px; text-align:left;">Nombre</th>
                <th style="padding:10px; text-align:center;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for contacto in contactos %}
                <tr style="background:#fff0f6;">
                    <td style="padding:10px;">
                        <a href="{{ path('ficha_contacto', {'id':contacto.id}) }}" style="color:#d63384; text-decoration:none;">
                            {{ contacto.nombre }}
                        </a>
                    </td>
                    <td style="padding:10px; text-align:center;">
                        <a href="{{ path('editar', {'codigo': contacto.id}) }}">
                            <button style="padding:5px 10px; border-radius:6px; background:#ffb6c1; color:white; border:none;">Editar</button>
                        </a>
                        <a href="{{ path('eliminar_contacto', {'codigo': contacto.id}) }}">
                            <button style="padding:5px 10px; border-radius:6px; background:#f08080; color:white; border:none;">Borrar</button>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
